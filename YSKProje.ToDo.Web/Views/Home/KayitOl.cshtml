@model AppUserViewModel
<form asp-action="KayitOl" class="mt-4 w-25 mx-auto p-3 shadow">
    <h4 class="text-center">Kayıt Ol</h4>
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <span class="text-warning" asp-validation-for="@Model.Name"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.SurName"></label>
        <span class="text-warning" asp-validation-for="@Model.SurName"></span>
        <input asp-for="@Model.SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <span class="text-warning" asp-validation-for="@Model.Email"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <span class="text-warning" asp-validation-for="@Model.Password"></span>
        <input asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword"></label>
        <span class="text-warning" asp-validation-for="@Model.ConfirmPassword"></span>
        <input asp-for="@Model.ConfirmPassword" class="form-control" />
    </div> 
    <div class="form-group">
        <label asp-for="@Model.UserName"></label>
        <span class="text-warning" asp-validation-for="@Model.UserName"></span>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <a href="" class="btn btn-warning btn-sm">Vazgeç</a>
    <button type="submit" class="btn btn-info btn-sm">Kayıt Ol</button> 
</form>