@model List<AciliyetListViewModel>
 
@if (Model.Count > 0)
{
    <a class="btn btn-sm btn-info my-2" asp-action="AciliyetEkle" asp-controller="Aciliyet">Aciliyet Ekle</a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Tanım</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Tanim</td>
                <td><a asp-action="GuncelleAciliyet" asp-controller="Aciliyet" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a></td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
<div class="text-center lead mt-4">
    <p class="lead">
        Sistemde Aciliyet Durumu Bulunamadı
    </p>
    <a class="btn btn-sm btn-info my-2" asp-action="AciliyetEkle" asp-controller="Aciliyet">Aciliyet Ekle</a>
</div>
}