@model List<GorevListViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (Model.Count == 0)
{
    <div class="p-3 text-center mt-3">
        <p class="lead">
            Herhangi bir görev bulunamadı..!
        </p>
        <a asp-action="EkleGorev" class="btn btn-info btn-sm">Bir Görev Oluştur</a>
    </div>
}
else
{
    <a asp-action="EkleGorev" class="btn btn-info btn-sm my-2">Yeni Görev Oluştur</a>
    <table class="table table-sm table-hover">
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Oluşturulma Tarihi</th>
            <th>Aciliyet</th>
            <th>İşlem</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Aciklama</td>
                <td>@item.OlusturulmaTarih.ToString("D")</td>
                <td>@item.Aciliyet.Tanim</td>
                <td>
                    <a asp-action="GuncelleGorev" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    @*<a asp-action="SilGorev" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>*@
                    <a data-id="@item.Id" data-toggle="modal" data-target="#DeleteModal" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </table>
} 
<!-- Modal -->
<div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="DeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Uyarı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Silmek İstediğinize Emin Misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                <button id="btnSil" type="button" class="btn btn-primary">Evet</button>
            </div>
        </div>
    </div>
</div>
@section JavaScript{ 
    <script type="text/javascript">
        $(document).ready(function () {
            $("#DeleteModal").on("show.bs.modal", function (event) {
                let tetikleyenElement = $(event.relatedTarget);
                let id = tetikleyenElement.data("id");

                $("#btnSil").click(function () {
                    $.ajax({
                        type: "Get",
                        url: "./Gorev/SilGorev",
                        data: { id: id },
                        dataType: "json",
                        contentType: "application/json charset=utf-8;",
                        success: function () {
                            window.location.reload();
                        },
                        error: function(error) {
                            alert(error.statusText);
                        }

                    });  
                });
            });
        });
    </script>
}