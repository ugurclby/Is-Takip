@{
    string active = TempData["Active"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Simple Sidebar - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->


    <link href="~/lib/bootswatch/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/lib/template-css/simple-sidebar.css" rel="stylesheet" />
</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">Admin</div>
            <div id="DV_Liste" class="list-group list-group-flush">
                <a id="a_GorevIslem" asp-action="Index" asp-controller="Gorev" class="list-group-item list-group-item-action">Görev İşlemleri</a>
                <a id="a_AciliyetListe" asp-action="Index" asp-controller="Aciliyet" class="list-group-item list-group-item-action">Aciliyet Listesi</a>
                <a id="a_IsEmri" asp-action="Index" asp-controller="IsEmri" class="list-group-item list-group-item-action">İş Emri</a>
                <a id="a_Dene2" asp-action="Index" asp-controller="Aciliyet" class="list-group-item list-group-item-action">Events</a>
                <a id="a_Dene3" asp-action="Index" asp-controller="Aciliyet" class="list-group-item list-group-item-action">Profile</a>
                <a id="a_Dene4" asp-action="Index" asp-controller="Aciliyet" class="list-group-item list-group-item-action">Status</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>

    @RenderSection("JavaScript", false)
    <!-- Menu Toggle Script -->
<script>
        $(document).ready(function () {
        if ('@active' =='Aciliyet') {
            $("#a_AciliyetListe").addClass("active");
        } else if ('@active' =='Gorev') {
            $("#a_GorevIslem").addClass("active");
        }
        else if ('@active' =='IsEmri') {
            $("#a_IsEmri").addClass("active");
        }
        });
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });

        //$("#DV_Liste a").click(function () {
        //    var activeList = $(this);
        //    $("#DV_Liste a").each(function () {
        //        $(this).removeClass("active");
        //    });
        //    $(activeList).addClass("active");
        //});


</script>

</body>

</html>
