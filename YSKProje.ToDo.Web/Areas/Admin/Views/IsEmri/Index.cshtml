@model List<GorevListAllViewModel>
@if (Model.Count > 0)
{
    <table class="table table-hover table-sm mt-2">
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Oluşturulma Tarihi</th>
            <th>Personel</th>
            <th>Aciliyet Tanım</th> 
        </tr>
        @foreach (GorevListAllViewModel item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Aciklama</td>
                <td>@item.OlusturulmaTarih.ToShortDateString()</td>
                <td>
                    @{
                        if (item.AppUser == null)
                        {
                            <span class="badge badge-danger "> Çalışan Personel Yok</span>
                        }
                        else
                        {
                            <span class="badge badge-danger ">@item.AppUser.Name çalışıyor.</span>
                        }
                    }
                </td>
                <td>
                    @item.Aciliyet.Tanim
                </td>

            </tr>
        }
    </table>
}
else
{
    <div class="my-2 text-center lead">
        Herhangi Bir Görev Bulunamadı..!
    </div>
}